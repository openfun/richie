{
  "extends": [
    "github>openfun/renovate-configuration"
  ],
  "ignorePaths": ["cookiecutter/**"],
  "packageRules": [
    {
      "enabled": false,
      "groupName": "ignored js dependencies",
      "matchManagers": [
        "npm"
      ],
      "matchPackageNames": [
        "@testing-library/react",
        "@types/faker",
        "@types/react",
        "@types/react-dom",
        "bootstrap",
        "faker",
        "node-fetch",
        "react",
        "react-dom"
      ]
    },
    {
      "enabled": false,
      "groupName": "ignored python dependencies",
      "matchManagers": [
        "setup-cfg"
      ],
      "matchPackageNames": [
        "arrow",
        "dj-pagination",
        "django-cms",
        "django-parler",
        "djangocms-file",
        "djangocms-googlemap",
        "djangocms-link",
        "djangocms-picture",
        "djangocms-text-ckeditor",
        "djangocms-video",
        "djangorestframework",
        "elasticsearch"
      ]
    }
  ]
}
