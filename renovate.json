{
  "extends": [
    "github>openfun/renovate-configuration"
  ],
  "ignorePaths": ["cookiecutter/**"],
  "packageRules": [
    {
      "enabled": false,
      "groupName": "ignored js dependencies",
      "matchManagers": [
        "npm"
      ],
      "matchPackageNames": [
        "@testing-library/react",
        "@types/faker",
        "@types/react",
        "@types/react-dom",
        "bootstrap",
        "faker",
        "node-fetch",
        "react",
        "react-dom"
      ]
    },
    {
      "enabled": false,
      "groupName": "ignored python dependencies",
      "matchManagers": [
        "setup-cfg"
      ],
      "matchPackageNames": [
        "Django",
        "elasticsearch"
      ]
    }
  ]
}
