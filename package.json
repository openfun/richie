{
  "name": "richie",
  "version": "0.1.0",
  "description": "A Django-CMS based portal for Open edX courses discovery",
  "main": "sandbox/manage.py",
  "scripts": {
    "build": "webpack",
    "generate-l10n-template": "rip json2pot 'src/richie-front/i18n/src/**/*.json' -o src/richie-front/i18n/richie-front.pot",
    "lint": "tslint -c tslint.json 'src/richie-front/js/**/*.ts?(x)'",
    "prettier-write": "prettier --write 'src/richie-front/js/**/*.+(ts|tsx|json|js|jsx)' '*.+(ts|tsx|json|js|jsx)'",
    "sass": "node-sass src/richie-front/scss/_main.scss src/richie/static/richie/css/main.css",
    "test": "jest",
    "watch-sass": "nodemon -e scss -x 'yarn sass'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openfun/richie.git"
  },
  "author": {
    "name": "Open FUN (France Université Numérique)",
    "email": "fun.dev@fun-mooc.fr"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/openfun/richie/issues"
  },
  "homepage": "https://github.com/openfun/richie#readme",
  "browserslist": [
    "last 2 versions",
    ">1%",
    "not dead"
  ],
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/polyfill": "7.2.5",
    "@babel/preset-env": "7.2.3",
    "@types/enzyme": "3.1.15",
    "@types/enzyme-adapter-react-16": "1.0.3",
    "@types/fetch-mock": "7.2.1",
    "@types/jest": "23.3.11",
    "@types/lodash-es": "4.17.1",
    "@types/query-string": "6.1.1",
    "@types/react": "16.7.18",
    "@types/react-autosuggest": "9.3.6",
    "@types/react-dom": "16.0.11",
    "@types/react-intl": "2.3.14",
    "@types/react-redux": "6.0.11",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.4",
    "babel-plugin-react-intl": "3.0.1",
    "babel-preset-react": "7.0.0-beta.3",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "fetch-mock": "7.3.0",
    "jest": "23.6.0",
